{
  "name": "enspider",
  "version": "1.0.0",
  "description": "Website accessibility monitor for guazi.com domains",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "monitor": "node --loader ts-node/esm src/index.ts",
    "monitor:en": "node --loader ts-node/esm src/index.ts --domain en.guazi.com",
    "monitor:ar": "node --loader ts-node/esm src/index.ts --domain ar.guazi.com",
    "server": "node --loader ts-node/esm src/server/index.ts",
    "dev": "node --loader ts-node/esm src/server/index.ts"
  },
  "keywords": [
    "accessibility",
    "monitor",
    "playwright",
    "crawler"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "better-sqlite3": "^12.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "node-cron": "^4.2.1",
    "ora": "^7.0.1",
    "playwright": "^1.40.1",
    "sharp": "^0.34.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
